{
  "name": "llm-assistant-discord-bot",
  "version": "2.0.0",
  "description": "LLM Assistant Discord Bot",
  "engines": {
    "node": "^20.0.0",
    "pnpm": "^8.0.0"
  },
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "prepare": "husky",
    "start": "tsx watch --clear-screen=false bin/index.ts",
    "prebuild": "rimraf dist",
    "build": "rimraf dist && tsup",
    "pretest": "rimraf coverage",
    "typecheck": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:CI": "pnpm run test && pnpm run typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "lint:fix:unsafe": "biome check --apply-unsafe .",
    "format": "biome format --write .",
    "ci": "biome ci .",
    "deploy:command": "tsx scripts/deploy-guild-commands.ts",
    "delete:command": "tsx scripts/delete-guild-commands.ts",
    "delete:command-global": "tsx scripts/delete-global-commands.ts"
  },
  "dependencies": {
    "@discordjs/rest": "2.0.0",
    "date-fns": "^3.6.0",
    "discord-api-types": "^0.37.79",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "openai": "^4.33.0",
    "oxide.ts": "^1.1.0",
    "pdf-text-reader": "^4.0.1",
    "winston": "^3.13.0",
    "wretch": "^2.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.4",
    "@faker-js/faker": "^8.4.1",
    "@types/node": "^20.12.5",
    "@vitest/coverage-v8": "^1.4.0",
    "esbuild": "^0.20.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "msw": "^2.2.13",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vitest": "^1.4.0",
    "vitest-mock-extended": "^1.3.1"
  }
}
